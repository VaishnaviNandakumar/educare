<title>Applications</title>
<div class= "content">

    <div class="row">
        <div class="col-10"><h2><b>Organization Dashboard</b></h2></div>
        <div class="col-2"><a href="/org/login" class="btn btn-light">Logout</a></div>
    </div>

    <h3>Applications</h3>
    <div class="submitted-requests">
        <% if(details!=null) { %>
        <% details.forEach(function(item){ %>
        <% if(item.status=="PENDING"){ %>    
            <div class="request-class card">
                <div class="row">
                <div class="col-6"><h5><b>Name : </b><%= item.user%></h5></div>
                 <div class="col-6"><h5><b> ID : </b><%= item.reqID%></h5></div>
                </div>
                <div class="row">
                    <div class="col request-content">
                         <b>Brand :</b> <%= item.brand %> <br>
                         <b>Model :</b> <%= item.model %>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <b>Additional Information : </b>
                        <%= item.info %> 
                    </div>
                </div>
                <div class="row">
                    <div class="col res-img">
                         <b>Resource Image : </b><br>
                        <img src="data:item/<%=item.image.contentType%>;base64,
                        <%=item.image.data.toString('base64')%>">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <b>Status : </b><%= item.status %> 
                    </div>
                </div>
                <div class="row">
                    <form method="POST" action="/org/dashboard/application">
                        <input type="hidden" name="resID" value="<%= item._id %>">
                            <input type="hidden" name="reqID" value="<%= item.reqID %>">
                            <input type="hidden" name="user_name" value="<%= item.user %>">
                            <button class="btn btn-success" name="status" type="submit" value="APPROVED">Approve</button>
                            <button class="btn btn-danger" name="status" type="submit" value="REJECTED">Reject</button>
                    </form>
                </div>
            </div>
        <% } %> 
        <% }) %>
       
        <% } else { %>
           <h2>Your application feed is currently empty.</h2> 
        <% } %>    
        
    </div>
</div>

